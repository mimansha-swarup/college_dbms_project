<body>


    <div class="container mt-4">


        <div class="card ">
            <div class="card-header">
                Register Form
            </div>
            <div class="card-body">
                <form action="/auth/register" method="POST" class="align-middle">
                    <div style="display: flex; justify-content: center; align-items: center;">

                        <img src="/img/avatar.svg" class="rounded mx-auto align-middle " style="width:150px; margin: 10px;" />
                    </div>
                    <br>
                    <hr class="my-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-user"></i> </span>
                        </div>
                        <input type="text" class="form-control" placeholder="Name" id="tchr-name" name="name" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-user-tie"></i></span>
                        </div>
                        <select name="category" class="form-control" required>
                            <option disabled selected>Select</option>
                            <option value="faculty">Faculty</option>
                            <option value="student">Student</option>
                        </select>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input type="email" class="form-control" placeholder="Email" id="tchr-email" name="email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text " id="inputGroup-sizing-default"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="Password" id="tchr-password" name="password" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="Confirm Password" id="tchr-password" name="passwordConfirm" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" required>
                    </div>


                    <br>

                    <input type="submit" value="Submit" class="btn btn-success rounded" style="width: 100%; margin-bottom: 1.9rem;">

                </form>
            </div>
        </div>

        <!-- {{#if message}}
        <h4 class="alert alert-danger mt-4">{{message}}</h4>
        {{/if}} -->

        <% if(typeof message!= "undefined" && message) { %>
            <h4 class="alert alert-danger mt-4">
                <%= message %>
            </h4>
            <% } %>

    </div>

